@model IEnumerable<FactsApp.Models.Fact>

@{
    ViewData["Title"] = "Index";
}

<h1>Mystic Bureau</h1>

<p>
    <a asp-action="Create">Create New</a>
    <li class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" onclick="myDropdown1()" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Sort
                            </a>
    <div id="sortBy" class="dropdown-menu" aria-labelledby="dropdownMenuLink" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 38px, 0px); top: 0px; left: 0px; will-change: transform;">
        <a asp-action="SortById">ByID</a>
        <a asp-action="SortByTitle">ByTitle</a>
        <a asp-action="SortByAuthor">ByAuthor</a>
    </div>
    </li>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FactTitle)
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FactTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FactBody)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

            <script>
        function myDropdown1() {
            document.getElementById("sortBy").classList.toggle("show");
        }
    </script>